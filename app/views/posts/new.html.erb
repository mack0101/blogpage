<h1>Add Post</h1>


  <% if @post.errors.any? %>
    <% @post.errors.full_message.each do |msg| %>
      <%= msg %>
    <% end %>
  <% end %>

  <%= form_for @post do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title, :required => true, :class => 'form-control' %>
  </p>

  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body, :class => 'form-control' %>
  </p>

  <p>
    <%= f.submit :class => 'btn btn-primary' %>
  </p>
<% end %>
