<h1>Add Post</h1>

<%= form_for :post, url: posts_path do |f| %>
    <% if @post.errors.any? %>
      <% @post.errors.full_message.each do |msg| %>
        <%= msg %>
      <% end %>
    <% end %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title, :required => true %>
  </p>

  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body, :required => true %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
