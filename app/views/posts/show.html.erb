<h2><%= @post.title %></h2>

<p><%= @post.body %></p>

<% if @current_user.present? %>
  <%= link_to "Edit", edit_post_path(@post) %>
  <%= link_to "Delete", @post, :method => :delete, :data => {:confirm => 'Are you sure?'} %>
  <% else %>
  <%= link_to "Edit", login_path %>
  <%= link_to "Delete", login_path %>
<% end %>
