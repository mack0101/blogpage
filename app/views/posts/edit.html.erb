<h1>Edit Post</h1>

<%= form_for @post do |f| %>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title, :required => true, :class => 'form-control' %>
  </p>

  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body, :required => true, :class => 'form-control' %>
  </p>

  <p>
    <%= f.submit :class => 'btn btn-primary' %>
  </p>
<% end %>
