<h3>Add Comment</h3>

<%= form_for([@post, @post.comments.build]) do |f| %>
  <p>
    <%= f.label :username %><br>
    <%= f.text_field :username, :required => true %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body, :required => true %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
