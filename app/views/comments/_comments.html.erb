<h3>Comments</h3>
<% @post.comments.each do |comment| %>
  <p><strong><%= comment.user.name %></strong>: <%= comment.body %>
  <% if @current_user.present? && (comment.user_id == @current_user.id || @post.user_id == @current_user.id) %>
    <%= button_to "Delete", [comment.post, comment], :class => 'btn btn-danger', :method => :delete, :data => {:confirm => 'Are you sure?'} %>
  <% end %>
<% end %>
